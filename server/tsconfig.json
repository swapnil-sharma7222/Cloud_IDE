{
  "compilerOptions": {
    "target": "ESNext",                  // Target modern JavaScript
    "module": "ESNext",                 // Use ES modules
    "rootDir": "./src",                 // Root directory for TypeScript files
    "outDir": "./dist",                 // Output directory for compiled JavaScript
    "strict": true,                     // Enable strict type checking
    "esModuleInterop": true,            // Interop with CommonJS modules
    "moduleResolution": "node",         // Resolve modules using Node.js conventions
    "resolveJsonModule": true,          // Allow importing JSON files
    "skipLibCheck": true                // Skip checking declaration files
  },
  "include": ["src/**/*.ts"],           // Include the source directory
  "exclude": ["node_modules"]           // Exclude node_modules
}
